<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_trip_detail"
        tools:context="com.example.fedora.mojioapp.TripDetailActivity">


    <ImageView
            android:layout_width="@dimen/tripdetail_layout_margin"
            android:layout_height="@dimen/tripdetail_layout_margin"
            android:id="@+id/imageView"
            android:src="@drawable/directions_car_black_"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_grey"
            android:text="Max Speed"
            android:id="@+id/maxSpeed"
            android:layout_above="@+id/maxRPM" android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_grey"
            android:text="Max Rpm"
            android:id="@+id/maxRPM"
            android:layout_above="@+id/efficiency" android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_grey"
            android:text="Fuel Efficiency"
            android:id="@+id/efficiency"
            android:layout_alignBottom="@+id/imageView" android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" android:layout_marginBottom="21dp"/>
</RelativeLayout>
